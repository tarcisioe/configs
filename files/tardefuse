FULLPATH="$(readlink -f $1)"

if [[ ! -f "${FULLPATH}" ]]
then
    echo "file $1 not found" 1>&2
    exit 1
fi

NPREFIXES="$(tar -tf $1 | sed -e 's/\/.*$//' | uniq | wc -l)"

if [[ "${NPREFIXES}" != "1" ]]
then
    echo "'tis a bomb!" 1>&2
    DIRNAME="$(basename "${FULLPATH}" | sed s/.tar.*$//g)"
    mkdir "${DIRNAME}"
    cd "${DIRNAME}"
fi

tar -xvf "${FULLPATH}"
