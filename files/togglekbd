KBMAP=$(setxkbmap -query | grep variant | cut -d ':' -f 2 | sed -e 's/\s//g')

if [[ $KBMAP == 'dvorak-mod' ]]
then
    setxkbmap br abnt2
else
    setxkbmap br dvorak-mod
fi

setxkbmap -option "ctrl:swapcaps"
xmodmap -e "keycode 9 = "
xmodmap -e "keycode 255 = Escape"
xcape -e 'Control_L=Escape' -t 200
