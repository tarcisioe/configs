# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# use super as modifier key
set $mod Mod4

# define styles for windows
new_window 1pixel
new_float normal

# font for window titles. ISO 10646 = Unicode
font pango:Droid Sans Mono 8

# set long command to float, sticky and resize windows
set $float_video floating enable border none, resize shrink width 10000 px, resize grow width 885 px, resize shrink height 10000 px, resize grow height 490 px, sticky toggle, exec --no-startup-id movefloat up right

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

set_from_resource $display i3wm.display eDP1

# switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# keyboard shortcuts
bindsym $mod+F1 exec i3-sensible-terminal
bindsym $mod+F2 exec --no-startup-id sensible-browser
bindsym $mod+F3 exec --no-startup-id telegram
bindsym $mod+F4 exec --no-startup-id pavucontrol
bindsym $mod+F8 exec --no-startup-id screenlayout $(dmenu <<< "")
bindsym $mod+Shift+F8 exec --no-startup-id screenlayout default
bindsym $mod+F10 exec --no-startup-id urxvt -name khaki -e khaki

bindsym $mod+Shift+Return exec --no-startup-id togglekbd
bindsym Menu exec --no-startup-id console
bindsym $mod+Shift+t exec --no-startup-id runtwitch
bindsym $mod+y exec --no-startup-id loadvideo -c

# notifications
bindsym $mod+t exec --no-startup-id showtime
bindsym $mod+b exec --no-startup-id battstatus
bindsym $mod+c exec --no-startup-id calendar

# mpd
bindsym $mod+p exec --no-startup-id cleese playpause
bindsym $mod+period exec --no-startup-id cleese next
bindsym $mod+comma exec --no-startup-id cleese prev
bindsym $mod+minus exec --no-startup-id cleese volumestep -5
bindsym $mod+equal exec --no-startup-id cleese volumestep 5
bindsym $mod+v exec --no-startup-id currentvol
bindsym $mod+s exec --no-startup-id currentsong
bindsym $mod+Shift+s exec --no-startup-id showplaylist

# lock
bindsym $mod+Alt+l exec --no-startup-id slock

# screenshots (shift for clipboard, super for area)
bindsym --release Print exec --no-startup-id sshot
bindsym --release shift+Print exec --no-startup-id sshot -c
bindsym --release $mod+Print exec --no-startup-id sshot -s
bindsym --release shift+$mod+Print exec --no-startup-id sshot -cs

# utils
bindsym $mod+Shift+c exec --no-startup-id carinhaaquela
bindsym $mod+Shift+w exec --no-startup-id whatevs

# keyboard brightness
bindcode 237 exec --no-startup-id sudo keybrightness down
bindcode 238 exec --no-startup-id sudo keybrightness up

# kill focused window
bindsym $mod+q kill

# start dmenu (a program launcher)
bindsym $mod+e exec dmenu_run

# switch focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move windows
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

#move floating windows
bindsym $mod+Left exec --no-startup-id movefloat left
bindsym $mod+Down exec --no-startup-id movefloat down
bindsym $mod+Up exec --no-startup-id movefloat up
bindsym $mod+Right exec --no-startup-id movefloat right

#move workspaces
bindsym $mod+Ctrl+h move workspace to output left
bindsym $mod+Ctrl+j move workspace to output down
bindsym $mod+Ctrl+k move workspace to output up
bindsym $mod+Ctrl+l move workspace to output right

bindsym $mod+Shift+Ctrl+h exec --no-startup-id swapws left
bindsym $mod+Shift+Ctrl+j exec --no-startup-id swapws down
bindsym $mod+Shift+Ctrl+k exec --no-startup-id swapws up
bindsym $mod+Shift+Ctrl+l exec --no-startup-id swapws right

# toggle stickiness (workspace independence)
bindsym $mod+Ctrl+t sticky toggle

# resize
mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt

# resize players
        bindsym $mod+t $float_video

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# split in horizontal orientation
bindsym $mod+Ctrl+Right split h

# split in vertical orientation
bindsym $mod+Ctrl+Down split v

# enter fullscreen mode for the focused container
bindsym $mod+u fullscreen

# toggle tiling / floating
bindsym $mod+Shift+apostrophe floating enable border toggle
bindsym $mod+apostrophe floating disable border toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+Shift+a focus child

# reload the configuration file
bindsym $mod+Shift+r reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+p restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+greater exit

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    colors {
# class            border  backgr. text
        focused_workspace  #525252 #333333 #CCCCCC
            active_workspace   #333333 #0F0F0F #AAAAAA
            inactive_workspace #333333 #0F0F0F #AAAAAA
            urgent_workspace   #666666 #800000 #CCCCCC
    }

    bindsym button4 nop
    bindsym button5 nop

    font pango:DejaVu Sans Mono for Powerline, FontAwesome, icomoon 8
    status_command i3elapsed
    tray_output eDP1
}

# colors
# class                 border  backgr. text    indicator
client.focused          #525252 #333333 #CCCCCC #CCCCCC
client.focused_inactive #333333 #0F0F0F #AAAAAA #666666
client.unfocused        #333333 #000000 #AAAAAA
client.urgent           #666666 #900000 #CCCCCC

