HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000
DIRSTACKSIZE=8
KEYTIMEOUT=1

# define DIRCOLORS
COLORFILE=${HOME}/.dir_colors
[[ -e ${COLORFILE} && $(tput colors) == 256 ]] && which dircolors > /dev/null && eval $(dircolors ${COLORFILE})
PACKAGES=${HOME}/.zsh

# get the require function
source ${PACKAGES}/init.zsh ${PACKAGES} &> /dev/null || return

require plugins
require prompt
require keyboard
require completion
require aliases
require custom-cd

require-if-exists localdefs || true
